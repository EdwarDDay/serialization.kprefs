{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/JetBrains/kotlin"],
      "groupName": "Kotlin & Compose compiler"
    },
    {
      "matchPackageNames": ["androidx.compose.compiler:compiler"],
      "groupName": "Kotlin & Compose compiler"
    },
    {
      "matchPackagePrefixes": ["org.jetbrains.kotlinx:kotlinx-coroutines"],
      "groupName": "Kotlinx Coroutines"
    },
    {
      "matchPackagePrefixes": ["org.jetbrains.kotlinx:kotlinx-knit"],
      "groupName": "Kotlinx Knit"
    },
    {
      "matchPackagePrefixes": ["org.jetbrains.kotlinx:kotlinx-serialization"],
      "groupName": "Kotlinx Serialization"
    }
  ]
}
